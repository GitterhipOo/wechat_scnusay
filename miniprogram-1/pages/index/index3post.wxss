}

picker {
    display: inline-block;
}

.moreInfor {
    position: relative;
    margin: 0rpx 5rpx;
    height: 50rpx;
}

.send {
    margin: 40rpx 0rpx;
    /* box-align:center; */

    height: 70rpx;
    border-radius: 70rpx;
    box-shadow: 0px 0px 8px #999 inset;
    line-height: 45rpx;
    text-align: center;
    background-color: purple;
    color: white
}

.send-hover {
    margin: 40rpx 0;
    height: 70rpx;
    border-radius: 70rpx;
    line-height: 45rpx;
    text-align: center;
    background-color: rgb(101, 47, 145);
    color: white;
    box-shadow: 0px 0px 0px rgb(253, 252, 252) inset;
}

.button {
    /* display: inline-block; */
