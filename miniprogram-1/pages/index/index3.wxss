/* pages/lostthing/index.wxss */
page {
    height: 100%;
    background-color: #eee;
}

/* 搜索框 */
.search {
    z-index: 9999999;
    height: 100%;
    width: 110%;
    border-radius: 50rpx;
    background-color: #eee;
    color: darkgray;
}

.search-hover {
    z-index: 9999999;
    height: 100%;
    width: 110%;
    border-radius: 50rpx;
    background-color: rgb(209, 209, 209);
}

/* 搜索框结束 */
/* 发布 */
.guide {
    z-index: 99999;
    position: fixed;
    top: 82%;
    right: 8%;
    margin: 3% 1%;
    height: 90rpx;
    width: 90rpx;
    border-radius: 45rpx;
    background-color: #fff;
    box-shadow: -1px 2px 12px 0px rgba(0, 0, 0, 0.2);
}

.guide .lostcenter {
    display: block;
    text-align: center;
    line-height: 90rpx;
    color: #aaa;
}

/* 切换栏 */
.tabitem1 {
    display: flex;
    float: left;
    background-color: rgb(186, 204, 217);
    margin-top: 1rpx;
    margin-bottom: 1rpx;
    width: 46%;
    height: 100%;
    border-radius: 10rpx;
    margin-left: 3%;
    text-align: center;
    justify-content: space-around;
    align-items: center;
    box-shadow: -1px 2px 12px 0px rgba(0, 0, 0, 0.2);
    font-weight: 550;
}

.tabitem2 {
    float: right;
    display: flex;
    background-color: white;
    margin-top: 1rpx;
    margin-bottom: 1rpx;
    width: 46%;
    height: 100%;
    border-radius: 10rpx;
    margin-right: 3%;
    text-align: center;
    justify-content: space-around;
    align-items: center;
    box-shadow: -1px 2px 12px 0px rgba(0, 0, 0, 0.2);
    font-weight: 550;
}

.swipertab {
    height: 5%;
    margin-top: 10rpx;
    background-color: rgb(245, 245, 245);

}

/* swiper模块 */

swiper {
    height: 100%;
}

/* 帖子数据 */
.box {
    /* width: 95%; */
    position: relative;
    margin-top: 15rpx;
    margin-left: 4%;
    margin-right: 4%;
    background-color: #fff;
    box-shadow: -1px 2px 12px 0px rgba(0, 0, 0, 0.4);
    border-radius: 16rpx;
}

.box1 {
    padding-top: 30rpx;
    padding-left: 3%;
    height: 100rpx;
    width: 500rpx;

}

.box1 image {
    float: left;
    margin: 5rpx 0 5rpx 10rpx;
    width: 90rpx;
    height: 90rpx;
    border-radius: 90rpx;
}

.box1 .text1 {
    float: left;
    margin-top: 10rpx;
    margin-left: 20rpx;
    font-weight: 700;
    font-size: 30rpx;
    width: 380rpx;
    /* 设置单行省略 */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-break: break-all;
}

.box1 .text2 {
    margin-left: 20rpx;
    font-size: 20rpx;
    color: #aaa;
}

.box-way {
    position: absolute;
    right: 3%;
    top: 3%;
    color: green;
    font-size: 40rpx;
}

.box2 {
    margin: 20rpx 10rpx;
    margin-left: 3%;
    padding-bottom: 40rpx;
    /* height: 400rpx; */
}

.box2 text {
    font-size: 30rpx;
    padding-right: 3%;
    padding-left: 1%;
    width: 95%;
    height: 30%;
    /* 多行省略 */
    white-space: pre-line;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    flex-flow: row wrap;
}

.detailimg {
    margin: 20rpx 5rpx 5rpx;
    height: 480rpx;
    width: 640rpx;
    border-radius: 20rpx;
    box-shadow: -1px 2px 12px 0px rgba(0, 0, 0, 0.3);
}

.box3 {
    position: absolute;
    bottom: 0%;
    right: 0%;
}

.box3 .post-data {
    float: right;
}

.box3 .foot {
    float: right;
}

.box3 .foot image {
    display: inline-block;
    width: 35rpx;
    height: 35rpx;
}

.test {
    height: 10px;
}

.weui-loadmore {
    width: 100%;
    height: 100rpx;
    font-size: 30rpx;
    text-align: center;
    margin-top: 30rpx;
}

.weui-loading {
    width: 50rpx;
    height: 50rpx;
    display: inline-block;
    vertical-align: middle;
    -webkit-animation: weuiLoading 1s steps(12, end) infinite;
    animation: weuiLoading 1s steps(12, end) infinite;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
}

.weui-loadmore-tips {
    display: inline-block;
    vertical-align: middle;
}

.nohistory {
    /* grey center 16px */
    color: #999;
    font-size: 16px;
    margin-top: 20px;
}

.nohistory-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 100%;
}