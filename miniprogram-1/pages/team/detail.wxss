/* pages/ShareCar/details/index.wxss */
page{
    background-color: rgb(245, 245, 245);
}
.chat {
    position: relative;
    padding-top: 10px;
    margin: 10px auto;
    /* border: rgb(32, 29, 221) solid 1px; */
    background-color: #fff;
    border-radius: 50rpx;
    box-shadow: -1px 2px 12px 0px rgba(0, 0, 0, 0.4);
