}

.touxiang {
    height: 45px;
    width: 45px;
    border-radius: 50%;
    overflow: hidden;
}

.touxianglan {
    margin-left: 4.5%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

 .follow { 
     background-color: #fff;
     border-color: #fff;
     color: rgb(75, 200, 238);
     font-size: 35rpx;
     right: -6%;
 }
  
.follow::after{
    border: none;
}
.name {
    padding-left: 10px;
    font-weight: 700;
    font-size: 15px;
}

.time {
    font-weight: 450;
    font-size: 13px;
}

.in_contact {
    padding-top: 10px;
    padding-left: 10px;
