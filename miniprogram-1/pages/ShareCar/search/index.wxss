/* pages/ShareCar/search/index.wxss */
/* 搜索样式 */
.title{
    text-align: center;
    font-size: 20px;
    font-weight: bold;
   }
   
   
   .search_con{
    width: 80%;
    margin:20px auto;
   }
   
   .search_con .search_input{
    border: 1px solid rgb(214, 211, 211);
    height: 45px;
    border-radius: 100px;
    font-size: 17px;
    padding-left: 15px;
    color: #333;
   }
   
   .search_con .search_btn{
    margin-top: 15px;
    width: 100%;
    height: 45px;
    background: #56b273;
    color: #fff;
    border-radius: 100px;
   }
   
   .search_result{
    width: 80%;
    margin:10px auto;
   }
   
   
   .search_result .empty{
    text-align: center;
    color: #f00;
    font-size: 15px;
   }
   
   .search_result .noresult{
    text-align: center;
    color: #666;
    font-size: 15px;
   }
   
   .search_result .resname{
    text-align: left;
    color: #333;
    font-size: 15px;
   }